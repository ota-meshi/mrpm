  },
  "files": [
    "bin/",
    "lib/",
    "index.js"
  ],
  "bugs": {
    "url": "https://github.com/ota-meshi/mrpm/issues"
  },
  "homepage": "https://github.com/ota-meshi/mrpm#readme",
  "devDependencies": {
    "chai": "^4.1.2",
    "chalk": "^2.4.1",
    "eslint": "^5.0.1",
    "glob": "^7.1.2",
    "mocha": "^5.1.1",
    "nyc": "^12.0.2",
    "rimraf": "^2.6.2"
  },
  "dependencies": {
    "toposort": "^2.0.2",
    "find-config": "^1.0.0"
  }
